<header>
    <ul>
        <li class="active">Home</li>
        <li><a href="./hiker">Hikers</a>
        <li><a href="./permit">Permits</a>
        <li><a href="./trip-report">Trip Reports</a>
        <li><a href="./trail">Trails</a>
        <li><a href="./admin">Administration</a>
    </ul>
</header>
<div class="content-wrapper">
    <div id="pageHeader">
